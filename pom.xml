            <!-- Profile-based OS detection and configuration -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>detect-os</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <condition property="isWindows">
                                    <os family="windows"/>
                                </condition>
                                <condition property="isMac">
                                    <os family="mac"/>
                                </condition>
                                <condition property="isUnix">
                                    <os family="unix"/>
                                </condition>
                                <condition property="isLinux">
                                    <and>
                                        <os family="unix"/>
                                        <not>
                                            <os family="mac"/>
                                        </not>
                                    </and>
                                </condition>

                                <!-- Set skip properties based on OS -->
                                <condition property="skip.windows" value="false" else="true">
                                    <isset property="isWindows"/>
                                </condition>
                                <condition property="skip.windows.exe" value="true" else="true">
                                    <isset property="isWindows"/>
                                </condition>
                                <condition property="skip.macos" value="false" else="true">
                                    <isset property="isMac"/>
                                </condition>
                                <condition property="skip.macos.pkg" value="true" else="true">
                                    <isset property="isMac"/>
                                </condition>
                                <condition property="skip.ubuntu" value="false" else="true">
                                    <isset property="isLinux"/>
                                </condition>
                                <condition property="skip.fedora" value="true" else="true">
                                    <isset property="isLinux"/>
                                </condition>
                                <condition property="skip.app.image" value="true" else="false">
                                    <or>
                                        <isset property="isWindows"/>
                                        <isset property="isMac"/>
                                        <isset property="isLinux"/>
                                    </or>
                                </condition>

                                <echo message="Detected OS: Windows=${isWindows}, Mac=${isMac}, Linux=${isLinux}"/>
                                <echo message="Skip flags: windows=${skip.windows}, macos=${skip.macos}, ubuntu=${skip.ubuntu}, fedora=${skip.fedora}"/>
                            </target>
                            <exportAntProperties>true</exportAntProperties>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-staging</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <!-- Clean and create staging directory -->
                                <delete dir="${staging.directory}"/>
                                <mkdir dir="${staging.directory}"/>
                                
                                <!-- Copy main JAR -->
                                <copy file="${project.build.directory}/${project.build.finalName}.jar" 
                                      tofile="${staging.directory}/${project.build.finalName}.jar"/>
                                
                                <!-- Copy dependencies to staging/lib -->
                                <mkdir dir="${staging.directory}/lib"/>
                                <copy todir="${staging.directory}/lib">
                                    <fileset dir="${project.build.directory}/lib"/>
                                </copy>
                                
                                <echo message="Staging directory created at: ${staging.directory}"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
